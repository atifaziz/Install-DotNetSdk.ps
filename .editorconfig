# http://editorconfig.org/

root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4
max_line_length = 100
rulers=80,120

[*.md]
indent_size = 2
trim_trailing_whitespace = false
rulers=80

[*.{json,yml}]
indent_size = 2
